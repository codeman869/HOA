<%= form_tag charges_path do %>

<article><label class="amount"><span><P>HOA dues for <%=@unit.address%></P>Amount <%=@unit.dues %>$</span></label></article>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="HOA Dues for <%=@unit.address%>"
          data-amount="<%=@unit.dues * 100%>"
          data-email="<%=@user.email%>"
          data-name="<%="Windemere II HOA"%>"
          data-label="Pay My Dues"></script>
<% end %>
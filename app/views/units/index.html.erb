<h1>Unit Administration</h1>


<table class="table table-striped table-hover table-responsive">
    <thead>
    <tr>
            <th>Current Owner</th>
            <th>Address</th>
            <th>Monthly Dues</th>
            <th>Actions</th>
    </tr>
    </thead>
    <% @units.each do |unit| %>
        <tr>
            <%if unit.user != nil %>
            <td><%=unit.user.email %></td>
            <% else %>
            <td>None</td>
            <% end %>
            <td><%=unit.address %></td>
            <td><%=unit.dues %></td>
            <td><a href="<%= edit_unit_path(unit)%>" class="btn btn-default">
                <span class="glyphicon glyphicon-pencil"></span></a></td>
        </tr>
    <% end %>
</table>
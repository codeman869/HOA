<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %> 
          <li><%=link_to "Home", "#"%></li>
          <li><%=link_to "Log out", destroy_user_session_url, method: "delete" %></li>
          <P class="navbar-text">Signed in as <%= "#{current_user.email}" %> </P>
        <% else %>
        <li><%=link_to "Sign up", new_user_registration_url %></li>
        <li><%=link_to "Log in", new_user_session_url%></li>
        <% end %>
      </ul>
      
    </nav>
    
  </div>
</header>
  
<% if notice %>
<p class="alert alert-success"><%=notice %></p>
<% end %>
<% if alert %>
<p class="alert alert-danger"><%=alert%></p>
<% end %>
<%= yield %>
</body>
</html>

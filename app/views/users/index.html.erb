<h1>User Administration</h1>


<table class="table table-striped table-hover table-responsive">
    <thead>
    <tr>
            <th>Email</th>
            <th>Last Sign in at</th>
            <th>Current Sign in at</th>
            <th>Last Signed in IP</th>
            <th>Current Signed in IP</th>
            <th>Confirmed?</th>
            <th>Failed Login Attempts</th>
            <th>Locked?</th>
            <th>Roles</th>
            <th>Assigned Unit</th>
            <th>Actions</th>
            
    </tr>
    </thead>
    <% @users.each do |user| %>
        <tr>
            <td><%=user.email %></td>
            <td><%=user.last_sign_in_at %></td>
            <td><%=user.current_sign_in_at %></td>
            <td><%=user.last_sign_in_ip%></td>
            <td><%=user.current_sign_in_ip%></td>
            <td><%= "No" if user.confirmed_at == nil %></td>
            <td><%= user.failed_attempts %></td>
            <td><%= "Yes" unless user.locked_at == nil %></td>
            <td><%=user.role%></td>
            <td><%=user.unit.address%></td>
            <td>Buttons go here</td>
        </tr>
    <% end %>
</table>